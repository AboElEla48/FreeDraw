<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.boards.editor.BoardEditorFragment">

    <eg.foureg.freedraw.ui.boards.editor.drawerview.BoardDrawingView
        android:id="@+id/board_editor_drawing_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <eg.foureg.freedraw.ui.boards.editor.motionview.BoardMotionView
        android:id="@+id/board_editor_motion_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>