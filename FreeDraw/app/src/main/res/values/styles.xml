<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StyleListItemText">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

    <style name="StyleListFloatingButton">
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="StyleToolsDialogShapesTitle">
        <item name="android:textColor">@color/colorOpenWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">30dp</item>
    </style>

    <style name="StyleToolsDialogShapesSubTitle">
        <item name="android:textColor">@color/colorOpenWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">30dp</item>
    </style>

    <style name="StyleToolsDialogShapesFieldValue">
        <item name="android:textColor">@color/colorOpenWhite</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="StyleToolsDialogShapesButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="paddingStart">5dp</item>
        <item name="paddingEnd">5dp</item>
        <item name="android:textColor">@color/colorOpenWhite</item>
    </style>

</resources>
